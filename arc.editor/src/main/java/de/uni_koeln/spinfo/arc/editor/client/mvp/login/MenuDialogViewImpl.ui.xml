<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="MainApplicationStyle2.css">

		.title {
			text-align: center;
			vertical-align:
			middle;
			padding: 5px;
			background-color: silver;
			font-size: 20px;
			font-weight: 900;
		}
		.title2 {
			text-align: center;
			vertical-align: middle;
			padding: 5px;
			background-color: #EBF5FF;
			font-size: 18px;
			font-weight:
			normal;
		}
		.title3 {
			text-align: center;
			vertical-align: middle;
			padding:
			5px;
			margin: 5px;
			font-size: 16px;
			font-weight: normal;
		}

		.infoBlock {

		}

		.info2 {
			text-align: center;
			margin-left: auto;
			margin-right: auto;
			padding: 10px;
			background-color: #E0F5FF;
			font-size: 18px;
			font-weight:
			normal;
		}

		.subInfo {
			text-align: left;
			margin-left: auto;
			margin-right:
			auto;
			padding: 15px;
			background-color: #EBF5FF;
			font-size: 20px;
			font-weight: normal;
		}

		.bg {
			background-color: #E0F5FF;
		}
	</ui:style>
	<g:ScrollPanel>

		<g:VerticalPanel width="100%" height="100%">
			<g:HorizontalPanel ui:field="horizontalHeaderPanel"
				width="100%" height="100%" addStyleNames="{style.title}">
				<g:Label ui:field="headerLabel" addStyleNames="{style.title}">
					Sprachliche Informationsverarbeitung | Institut für Linguistik | Universität zu Köln | Leitug: Prof. Dr. Jürgen Rolshoven
				</g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label ui:field="contentLabel" addStyleNames="{style.title2}">Projektbeschreibung: </g:Label>
				<g:Anchor href="http://www.spinfo.phil-fak.uni-koeln.de/forschung-arc.html">http://www.spinfo.phil-fak.uni-koeln.de/forschung-arc.html</g:Anchor>
			</g:HorizontalPanel>
			<g:Label addStyleNames="{style.title3}"> Projektmitarbeiter: </g:Label>
			<g:Label addStyleNames="{style.title3}"> Dr. Jürgen Hermes, Claes Neuefeind, Mihail Atanassov, Francisco Mondaca, David Rival, Alena Geduldig</g:Label>
			<g:Label addStyleNames="{style.title3}">2015</g:Label>
			<g:VerticalPanel horizontalAlignment="ALIGN_CENTER"
				ui:field="verticalContentPanel" width="100%" height="100%">
				<g:Button ui:field="cancel" addStyleNames="{style.title3}">Schließen</g:Button>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 